{
  "plugins": ["promise", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:promise/recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-console": "off",
    "no-shadow": "off",
    "no-unused-vars": "warn",
    "no-useless-escape": "warn",
    "import/no-dynamic-require": "error",
    "promise/catch-or-return": [
      "error",
      {
        "terminationMethod": ["catch", "finally"]
      }
    ]
  }
}
